<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#00bfff"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="7Clouds"
        android:textAlignment="center"
        android:layout_marginTop="20sp"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/user_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_marginTop="100sp"
        android:backgroundTint="#fff"
        android:ems="10"
        android:fontFamily="@font/montserrat_bold"
        android:hint="Ваш город"
        android:inputType="textPersonName"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <Button
        android:id="@+id/weather_button"
        android:layout_width="150sp"
        android:layout_height="80sp"
        android:layout_below="@id/user_city"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:backgroundTint="#6495ed"
        android:fontFamily="@font/montserrat_bold"
        android:text="Узнать погоду"
        android:textAlignment="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:layout_below="@id/weather_button"
        android:layout_marginTop="60sp"
        android:fontFamily="@font/montserrat_bold"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/app_name"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/ic__04241" />


</RelativeLayout>
